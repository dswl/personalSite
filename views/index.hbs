<script>
    function toggleElement(idName)
    {
        var textField = document.getElementById(idName)
        
        if(textField.className.includes("hidden"))
        {
            textField.className = textField.className.replace("hidden", "")
        }
        else
        {
            textField.className += " hidden"
        }
    }
    function hideFunction(idName) //DEPRECIATED, use toggleElement instead
    {
        var textField = document.getElementById(idName)
        
        if(textField.className == "hidden px-5 text-justify")
        {
